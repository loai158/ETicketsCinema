@model MovieTickets.Models.Cinema

@{
    ViewData["Title"] = "Edit";
}

<h1 style="padding-left:25px" >Edit Cinema</h1>


<hr />
<div style="padding-left:25px"  class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="CinemaLogo" class="form-label">Cinema Logo</label>
                <input type="file" class="form-control" id="CinemaLogo" name="file" value="@Model.CinemaLogo" accept="image/*" onchange="previewImage(event)">
                <div class="mt-3 position-relative" style="max-width: 20%;">
                    <img id="imgPreview" src="~/images/logos/@Model.CinemaLogo" alt="Image Preview" style="width: 100%; height: auto; display: block;" />
                    <a href="/Addmin/Cinema/DeleteImg?cinemaId=@Model.Id" class="btn btn-danger btn-sm position-absolute top-0 end-0" style="transform: translate(50%, -50%);" onclick="deleteImage()">X</a>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Selected Movies:</label>
                <div id="selectedMovies" class="mb-2 p-2 border rounded" style="min-height: 40px;">
                    <span class="text-muted">No Movie selected</span>
                </div>
                <label class="form-label">Movies</label>
                <select id="MovieSelect" name="CinemaMovies[]" class="form-select" multiple size="5" onchange="updateSelectedMovies()">
                    @foreach (var item in ViewData["Movies"] as List<Movie>)
                    {
                        if (Model.CinemaMovies.Any(a => a.Id == item.Id))
                        {
                            <option value="@item.Id" selected>@item.Name</option>
                        }
                        else
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    function previewImage(event) {
        const imgPreview = document.getElementById('imgPreview');
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                imgPreview.src = e.target.result;
                imgPreview.style.display = 'block';
            }
            reader.readAsDataURL(file);
        } else {
            imgPreview.style.display = 'none';
            imgPreview.src = '';
        }
    }
    function deleteImage() {
        const imgPreview = document.getElementById('imgPreview');
        imgPreview.src = '';
        imgPreview.style.display = 'none';
        document.getElementById('ImgUrl').value = '';
    }
    function updateSelectedMovies() {
        const select = document.getElementById('MovieSelect');
        const selectedDiv = document.getElementById('selectedMovies');
        selectedDiv.innerHTML = '';
        let selectedValues = [];
        for (let option of select.options) {
            if (option.selected) {
                selectedValues.push(`<span class="badge bg-primary me-1">${option.text}</span>`);
            }
        }
        selectedDiv.innerHTML = selectedValues.length > 0 ? selectedValues.join(' ') : '<span class="text-muted">No categories selected</span>';
    }
</script>