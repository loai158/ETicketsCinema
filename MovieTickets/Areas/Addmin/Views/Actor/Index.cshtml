@model IEnumerable<Actor>

<div class="container-fluid  my-3" style="width:auto">
    <div class="row">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1>All Actors</h1>
            <a class="btn btn-success" href="/Addmin/Movie/Create">Create New</a>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr class="bg-dark text-white">
                            <th scope="col">#</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">News</th>
                            <th scope="col">Bio</th>
                            <th scope="col">Profile Picture</th>
                            <th scope="col">Movies</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.FirstName</td>

                                <td>@item.LastName</td>
                                <td>@item.News</td>
                                <td>
                                    <img src="~/images/cast/@item.ProfilePicture" alt="@item.FirstName" width="50" height="50">
                                </td>
                                
                                <td>@string.Join(", ", item.ActorsMovie.Select(c => c.Name))</td>
                              
                                <td>
                                    <a class="btn btn-warning btn-sm" href="/Addmin/Actor/Edit?actorId=@item.Id">Edit</a>
                                    <button class="btn btn-danger btn-sm" onclick="confirmDelete(@item.Id)">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<style>
    .table-responsive {
        width: 100%;
    }

    .table {
        width: 100% !important;
    }
</style>
<script>
    function confirmDelete(id) {
        if (confirm("Are you sure you want to delete this actor?")) {
            window.location.href = `/Addmin/Actor/Delete?actorId=${id}`;
        }
    }
</script>
